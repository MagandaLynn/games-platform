// packages/db/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model HangmanPuzzle {
  id         String   @id @default(cuid())
  slug       String   @unique              // e.g. "2026-01-15" or "daily-2026-01-15"
  phrase     String                        // the answer phrase
  hint       String?                       // optional hint
  createdAt  DateTime @default(now())
}
